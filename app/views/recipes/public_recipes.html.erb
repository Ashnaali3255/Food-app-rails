<header class="d-flex justify-content-center align-items-center">
     <h1 class="display-4"> <strong>
        Public Recipes
     </strong></h1>
</header>

<% @public_recipes.each do |public_recipe| %>
  <div class="card border-secondary mb-2" style="width: 100%;">
    <div class="card-body text-secondary d-flex justify-content-between align-items-center">
      <div style="width: 40%;">
        <h5 class="card-title"><a href="<%=  recipe_path(public_recipe) %>" class="text-decoration-none text-uppercase font-weight-bold"><%= public_recipe.name %></a></h5>
          <% if can? :manage, public_recipe %>
            <%= button_to "REMOVE",  recipe_delete_path(recipe_id: public_recipe.id), method: :delete, data: { turbo_confirm: "Are you sure? "}, class: "text-decoration-none text-danger", class: "btn btn-danger" %>
          <% else %>
            <%= button_to "Inactive", root_path, class: "btn btn-secondary disabled", method: :delete%>
          <% end %>
      </div>
      <p class="text-dark" style="width: 58%;"><%= public_recipe.description %></p>
    </div>
  </div>
<% end %>
